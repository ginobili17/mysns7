.account-page
  .account-page__signin
    %br
    %h2 Log in
    .account-page__create
      = link_to "Sign up", new_registration_path(resource_name), class: 'account-page__create-btn'

      = link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, method: :post, class: 'account-page__facebook-btn'
      = link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post, class: 'account-page__google-btn'
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .account-page__signin__template
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .account-page__signin__template
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "current-password"
      - if devise_mapping.rememberable?
        .account-page__signin__template
          = f.check_box :remember_me
          = f.label :remember_me
      .account-page__signin-btn
        = f.submit "Log in"