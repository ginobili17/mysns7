<% if user_signed_in? %>
  <% if @post.like_user(current_user.id) %>
    <%= button_to post_like_path(@post), method: :delete, id: "like-button", remote: true do %>
      ❤️
      <span>
        <%= @post.likes_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to post_likes_path(@post), id: "like-button", remote: true do %>
      ♡
      <span>
        <%= @post.likes_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
  ♡
    <span>
      <%= post.likes_count %>
    </span>
<% end %>